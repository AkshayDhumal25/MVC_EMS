@model IEnumerable<MVC_EMS.Models.EmployeeMaster>

<h2>Employee List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Name</th>
            <th>Country</th>
            <th>State</th>
            <th>City</th>
            <th>Email</th>
            <th>Mobile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeCode</td>
                <td>@emp.FirstName @emp.LastName</td>
                <td>@emp.Country?.CountryName</td>
                <td>@emp.State?.StateName</td>
                <td>@emp.City?.CityName</td>
                <td>@emp.EmailAddress</td>
                <td>@emp.MobileNumber</td>
            </tr>
        }
    </tbody>
</table>
